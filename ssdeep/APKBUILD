# Maintainer: Notebook Gallery Team <team@nb.gallery>
pkgname=ssdeep
pkgver=2.14
pkgrel=0
pkgdesc="A program for computing context triggered piecewise hashes (CTPH), i.e. fuzzy hashes"
url="https://ssdeep-project.github.io/ssdeep/"
arch="all"
license="GPL2"
depends=""
makedepends=""
subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/ssdeep-project/ssdeep/releases/download/release-2.14/ssdeep-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="a7069d89646b849c3856e775ad7e4427b6a781a800e72e79635b1c15b8dfc1ccb8f7e1e518e321abe41f442bc4647907fc0b2336cc4d80b3dd56889da610ea87  ssdeep-2.14.tar.gz"
