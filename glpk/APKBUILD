# Maintainer: Notebook Gallery Team <team@nb.gallery>
pkgname=glpk
pkgver=4.65
pkgrel=0
pkgdesc="GNU Linear Programming Kit"
url="http://www.gnu.org/software/glpk"
arch="all"
license="GNU"
depends=""
depends_dev=""
makedepends="$depends_dev gcc make"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.gnu.org/gnu/glpk/glpk-$pkgver.tar.gz"

builddir="$srcdir"/glpk-"$pkgver"
build() {
	cd "$builddir"
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install || return 1
	make check || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
	rm -f "$pkgdir"/usr/lib/*.la
}

sha512sums="997e8e599ff1718a08c66b86eadd0e01f4644899f1e95920f8ae91d66b4d8361021766b346845f4dcbcfe667b41ab72ea3d377017a0ebf85d7ece091cfd81375  glpk-4.65.tar.gz"
