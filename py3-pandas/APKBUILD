sha256sums="f09c8f999611c2a4c073b5fa3ec212b859b5569e14a59f084f47f4203c2d0600  pandas-0.20.3.tar.gz"
sha512sums="2f43134e3f9f2bfe243e64985c6168771ed2e455d747d14a540859e7d7948f5b5e46b51aa2b8cc6db2336efa0ed811597d572fefdf7744a490d9911a257e2ba5  pandas-0.20.3.tar.gz"
