# Maintainer: Notebook Gallery Team <team@nb.gallery>
pkgname=libpst
pkgver=0.6.72
pkgrel=0
pkgdesc="Library for interacting with PST (MS Outlook Personal Folders) files"
url="http://www.five-ten-sg.com/libpst/"
arch="all"
license="GPLv2"
depends=""
depends_dev=""
makedepends="libgsf-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://www.five-ten-sg.com/$pkgname/packages/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-libpst-shared \
		--disable-python \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="f2aeb2dc1b9d3e4e33bfddffac6dc3484e8bede432fdaf05a2250d375872db9514a16ff3e19aa823c674fc5ac82d03e257dc06b76e00195439077fd63657b5a5  libpst-0.6.72.tar.gz"
