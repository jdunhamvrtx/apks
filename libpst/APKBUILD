# Maintainer: Notebook Gallery Team <team@nb.gallery>
pkgname=libpst
pkgver=0.6.68
pkgrel=0
pkgdesc="Library for interacting with PST (MS Outlook Personal Folders) files"
url="http://www.five-ten-sg.com/libpst/"
arch="all"
license="GPLv2"
depends=""
depends_dev=""
makedepends="libgsf-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://www.five-ten-sg.com/$pkgname/packages/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-libpst-shared \
		--disable-python \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="a942c243e1e6c25b82330c87b298b45c  libpst-0.6.68.tar.gz"
sha256sums="7e898ea37078321db8aa3dd49a39769285c5e033fc96ec62b0c54433d453ac1a  libpst-0.6.68.tar.gz"
sha512sums="5fd48799f2bcfca6c43ba6ba5631fc0e84aad69888d00679a0b737ba1fb2df6956b05f5b2ed7ca97084cc2aa80176e6f2648a3584ccb9d8ae130b77f6bcdb1d6  libpst-0.6.68.tar.gz"
