# Maintainer: Notebook Gallery Team <team@nb.gallery>
pkgname=libpst
pkgver=0.6.70
pkgrel=0
pkgdesc="Library for interacting with PST (MS Outlook Personal Folders) files"
url="http://www.five-ten-sg.com/libpst/"
arch="all"
license="GPLv2"
depends=""
depends_dev=""
makedepends="libgsf-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://www.five-ten-sg.com/$pkgname/packages/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-libpst-shared \
		--disable-python \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="3708ef8e8ec30b689072fd9fb482a81a  libpst-0.6.70.tar.gz"
sha256sums="19981c0661305d093e7df8cf579662c6157ffb38a7873091cfc9e900fb4667d4  libpst-0.6.70.tar.gz"
sha512sums="0ba168cd4718d657c1f07210d9377251f5c5f21c1ea18193c56713d9b8f09c7e6bf16e60660e1f79d0693d19994a24ef7b557e1cb825d5f709fef1d7730eebf8  libpst-0.6.70.tar.gz"
