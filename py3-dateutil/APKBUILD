# Maintainer: Notebook Gallery Team <team@nb.gallery>
pkgname=py3-dateutil
_pkgname=dateutil
pkgver=2.6.0
pkgrel=1
pkgdesc="Python extensions for datetime module"
url="https://dateutil.readthedocs.io"
arch="noarch"
license="BSD"
depends="python3 py3-six"
depends_dev=""
makedepends="python3-dev"
install=""
subpackages=""
source="python-$_pkgname-$pkgver.tar.gz::https://github.com/$_pkgname/$_pkgname/archive/$pkgver.tar.gz"

_builddir="$srcdir"/$_pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	python3 setup.py build || return 1
}

package() {
	cd "$_builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

md5sums="7ac719938274be8da1ab870c3b35941c  python-dateutil-2.6.0.tar.gz"
sha256sums="3a027333eda28ad003f1a6c77cc0a46be06cb9e0790843dad6a1b619b102a181  python-dateutil-2.6.0.tar.gz"
sha512sums="d95683f4d67822ccec8a3903d4c989cdedd2edb6a2a83ed0eb3cad2311cb37febe7e1b33f892984436ed25c39e235e861d67d0cd8ab95c44fc883d3d86c37e38  python-dateutil-2.6.0.tar.gz"
