sha256sums="0a0685962ee5ac303f470acbb659f0f97aef5b9deb6b85d059691c706ef6e45e  entrypoints-0.2.2-py2.py3-none-any.whl"
sha512sums="860c09f1164521ab54d042f5eae2678675456b7880d09116cace4890a23d83a270177ecedee0d3b8e2422198b9826d1ea647cedf96f1d4d6f4cd98fcb3d569fb  entrypoints-0.2.2-py2.py3-none-any.whl"
