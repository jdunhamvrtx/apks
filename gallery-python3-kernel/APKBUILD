# Maintainer: nb.gallery team <team@nb.gallery>
pkgname=gallery-python3-kernel
pkgver=1.0.0
pkgrel=2
pkgdesc="Python 3 kernel for the nb.gallery Jupyter client"
url="https://github.com/nbgallery/apks"
arch="x86_64"
license="MIT"
depends="
  libffi-dev
  libressl
  libressl-dev
  py3-cffi
  py3-cparser
  py3-cryptography
  py3-decorator
  py3-jinja2
  py3-openssl
  py3-six
  py3-tornado
  py3-zmq
  python3
  python3-dev 
  "
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="https://pypi.python.org/packages/f8/ad/0e77a853c745a15981ab51fa9a0cb4eca7a7a007b4c1970106ee6ba01e0c/entrypoints-0.2.2-py2.py3-none-any.whl"

build() {
	return 0;
}

package() {
	cd "$srcdir"
	pip3 install --root="$pkgdir" entrypoints-0.2.2-py2.py3-none-any.whl
	pip3 install --root="$pkgdir" ipykernel ipywidgets 
	pip3 install --root="$pkgdir" http://github.com/nbgallery/pypki2/tarball/master#egg=pypki2
	pip3 install --root="$pkgdir" --no-deps http://github.com/nbgallery/ipydeps/tarball/master#egg=ipydeps
	rm -rf "$pkgdir/usr/share/man"
}

