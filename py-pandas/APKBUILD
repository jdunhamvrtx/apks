# Maintainer: Notebook Gallery Team <team@nb.gallery>
pkgname=py-pandas
_pkgname=pandas
pkgver=0.23.4
pkgrel=0
pkgdesc="Cross-section and time series data analysis toolkit"
url="http://pandas.pydata.org"
arch="all"
license="BSD"
depends="python2 py-dateutil py-numpy py-tz"
depends_dev=""
makedepends="py-numpy-dev py-setuptools cython-dev"
install=""
subpackages=""
source="$_pkgname-$pkgver.tar.gz::https://github.com/$_pkgname-dev/$_pkgname/archive/v$pkgver.tar.gz"

builddir="${srcdir}/${_pkgname}-$pkgver"
build() {
	cd "$builddir" || return 1
	python2 setup.py build || return 1
}

package() {
	cd "$builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

sha512sums="2b6b84361ed892494084fbbdd632f71322d1ae1a86b3d022f6d341ec7cc0928a5b324fa721b02c5b51683a469de5912ac6e25ab1fb0be44d4fa5de414bd8fe68  pandas-0.23.4.tar.gz"
